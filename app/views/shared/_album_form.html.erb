<%= form_for(@album, html: { multipart: true }) do |f| %>

<div class="field">
	<p class="title_field">Add New Album</p>
	<%= f.text_area :title, placeholder: "Add title..." %>
</div>
<span class="picture">
	
	<p id="picture_add" style="cursor:pointer" >
		<img src="/Outbox_128.png" id="upfile1" style="cursor:pointer" />Add image ...</p>
	<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "add_file" %>
</span>
	<%= f.submit "Create", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
	$('#album_picture').bind('change', function() {
		size_picture = this.files[0].size/1024/1024;
		if (size_picture > 5) {
			alert('Please choose a smaller file than 5MB.');
		}
	});
</script>

<script type="text/javascript">
	$("#picture_add").click(function () {
    $("#album_picture").trigger('click');
});
</script>